---
import Base from "../layouts/Base.astro";
const meta = { title: "Commercial Trash Valet | Apartments & Communities", desc: "Door-to-door evening trash pickup for multifamily, powered by Community 1st Valet." };
---
<Base {...meta}>
  <h1>Commercial Trash Valet</h1>
  <p>Door-to-door valet trash pickup for apartments and communities in DFW. Evening routes, tidy walkways, and resident satisfaction.</p>
  <aside class="note">Powered by <a href="https://www.community1stvalet.com/" rel="noopener">Community 1st Valet</a>.</aside>
  <h2>Request a proposal</h2>
  <form name="commercial-quote" method="POST" data-netlify="true" action="/thank-you">
    <input type="hidden" name="form-name" value="commercial-quote" />
    <label>Community name <input name="community" required></label>
    <label>Units / bins <input name="units" required></label>
    <label>City <input name="city" required></label>
    <label>Contact name <input name="name" required></label>
    <label>Email <input name="email" type="email" required></label>
    <label>Phone <input name="phone" required></label>
    <label>Notes <textarea name="notes"></textarea></label>
    <button type="submit">Request proposal</button>
  </form>
  <p class="tiny">We may share proposal details with Community 1st Valet to service your property.</p>
</Base>
