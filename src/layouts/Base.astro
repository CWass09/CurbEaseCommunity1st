---
import "../styles/global.css";
const { title = 'CurbEase Valet', description = 'Weekly curbside bin valet and commercial trash valet in North Texas' } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0B1F3A" />
    <!-- GA4 placeholder: replace G-XXXXXXX -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXX"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-XXXXXXX');
    </script>
    <link rel="icon" href="/assets/favicon.ico" />
  </head>
  <body>
    <header class="header" aria-label="Primary">
      <div class="container inner">
        <a class="brand" href="/" aria-label="Home">
          <img src="/assets/logo_horizontal_final_512.png" class="logo" alt="CurbEase logo" onerror="this.src='/assets/logo_horizontal_final.svg'">
          <div><div class="badge">CurbEase Bin Valet</div><small class="sub">Prosper • Light Farms</small></div>
        </a>
        <button class="menu-toggle" aria-label="Open menu">Menu</button>
        <nav class="nav-main">
          <a href="/#services">Services</a>
          <a href="/pricing">Pricing</a>
          <a href="/faq">FAQ</a>
          <a href="/about">About</a>
          <a href="/contact">Contact</a>
          <a class="cta" href="/signup">Subscribe</a>
        </nav>
        <div class="actions">
          <a class="cta" href="/signup">Sign Up</a>
        </div>
      </div>
    </header>
    <main><slot /></main>
    <footer class="footer">
      <div class="container">
        <p>© CurbEase Valet · Police-officer-owned · Prosper · Celina · Light Farms</p>
      </div>
    </footer>
  </body>
</html>
