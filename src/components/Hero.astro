---
const { title, subtitle } = Astro.props;
---
<section class="hero">
  <div class="container">
    <h1>{title}</h1>
    <p>{subtitle}</p>
    <div class="pills">
      <a href="/residential" class="pill primary">Residential</a>
      <a href="/commercial" class="pill">Commercial</a>
    </div>
    <div class="badges">
      <span class="badge">Weekly curbside pick-up</span>
      <span class="badge">Trash + Recycle</span>
      <span class="badge">Simple pricing</span>
    </div>
  </div>
</section>
